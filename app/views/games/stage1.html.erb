<div class="row">
  <div class="col-md-12">
    <%= link_to "回上一頁",game_path(@game),class: "btn btn-lg btn-warning"  %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h1>Game <%= @game.id %> > Stage <%= @stage %></h1>
    <h2>規則</h2>
    <% if ['A1','A3','B1'].include? @stage %>
    <h3>使用者可同時做答<h3>
    <% end %>
    <% if @stage == 'A1' %>
    <h3>使用者畫面上不顯示秒數</h3>
    <h3> <input id="counting" type="checkbox" /> 計分</h3>
    <h3>限時 <input id="second" type="number"/> 秒</h3>
    <% elsif ['A3','B1','B2_v1','B2'].include? @stage %>
    <input id="second" type="hidden" value="" />
    <h3>顯示答題數<h3>
      <% if @stage == 'A3' %>
      <h3>使用者確認送出之後，兩方使用者皆停止書寫<h3>
      <% end %>
      <% if @stage == 'B2_v1' %>
      <h3>使用者個別書寫(搶答制)<h3>
      <% end %>
    <% end %>
    <%= link_to "確認","#",id: "confirm", class: "btn btn-lg btn-success"  %>
  </div>
</div>

<% content_for :javascripts do %>
<script type="text/javascript">
$(document).ready(function(){

  document.getElementById('confirm').onclick = function(e){
    e.preventDefault();
    var second = document.getElementById('second');
    var counting = document.getElementById('counting');
    location.href = '/games/<%= @game.id %>/server1?stage=<%= params[:stage] %>&join_visitors_number=<%= @join_visitors_number %>&second='+second.value+(counting? ('&counting=' + (counting.checked? '1': '0')) : "");
  }
});
</script>
<% end %>