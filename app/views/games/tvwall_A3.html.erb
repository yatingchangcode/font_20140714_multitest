  });
}

window.timeRemaining = parseInt(<%= @second %>);
window.alarm = null;

window.responsiveMethod = function(){
  var jqEl = $('[id^=grid_]');

  var w = $(window).width()*0.243;
  //var w = $('.container').width()*0.243;
  jqEl.height(w);
  jqEl.width(w);
};

