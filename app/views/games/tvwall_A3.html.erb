  namebox.css('background-position-y', (w + 5) / 2 );
  //alert(w);
};

window.addEventListener('resize', window.responsiveMethod);

$(document).ready(function() {
  CM.prop({
    width: 500,
    height: 500,
    lineWidth: 13,
