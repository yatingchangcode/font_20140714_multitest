<div class="row">
  <div class="col-md-12">
    <%= link_to "回上一頁",game_path(@game),class: "btn btn-lg btn-warning"  %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h1>Game <%= @game.id %> > Stage <%= @stage %></h1>
    <h2>規則</h2>
    <h3>使用者各別選擇格子及書寫</h3>
    <h3>每回合限時 <input id="second" type="number" value="60" /> 秒</h3>
    <h3> <input id="rice" type="checkbox" /> 米字格 </h3>
    <%= link_to "確認","#",id: "confirm", class: "btn btn-lg btn-success"  %>
  </div>
</div>

<% content_for :javascripts do %>
<script type="text/javascript">
$(document).ready(function(){

  document.getElementById('confirm').onclick = function(e){
    e.preventDefault();
    var second = document.getElementById('second');
    var rice = document.getElementById('rice');
    location.href = '/games/<%= @game.id %>/server_idioms?stage=<%= params[:stage] %>&join_visitors_number=<%= @join_visitors_number %>&second='+second.value+'&rice='+(rice.checked? '1':'0');
  }
});
</script>
<% end %>